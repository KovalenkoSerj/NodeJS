extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/users.css")
block content
    main
        if users.length > 0
            .grid
                each user in users
                    article.card.user-item    
                        header.card__header 
                            h1.user__name #{user.username}
                        div.card__image
                            img(src="", alt="User")
                        div.card-contet
                            h2.user__lastname LastName: #{user.lastname}
                            p.user__email Email: #{user.email}
                        .card__actions
                            button.btn Add User
        else 
            h1 No users
