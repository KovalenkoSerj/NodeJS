extends ../layout/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/main.css")

block content 

    main
        if errorMsg.length > 0
            p(class='user-message user-message--error') #{errorMsg}
        form(action='/login', method="POST", class='product-form')
            .form-control
                label(for="email") Email
                input(type="email", name='email', id='email', value=`${oldInput.email}`, class=`${validationErrors[0] && validationErrors[0].param === 'email' ? 'invalid': ''}`)
                label(for="password") Password
                input(type="password", name='password', id='password', value=`${oldInput.password}`, class=`${validationErrors[0] && validationErrors[0].param === 'password' ? 'invalid': ''}`)
                input(type="hidden", name='_csrf' value=`${csrfToken}`)
                button.btn(type='submit') Login
    .centered
        a.btn(href="/reset") Reset Password